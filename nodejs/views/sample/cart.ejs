                        <tbody>
                        <tr>
                            <td><img class="confirmation-item" src="/static/sample/img/item0008.jpg"></td>
                            <td class="text-right">Fire HD8</td>
                            <td class="text-right">￥8,980</td>
                            <td class="text-right">
                                <select id="hd8" name="hd8" class="form-control">
                                    <option value="1" selected>1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td><img class="confirmation-item" src="/static/sample/img/item0010.jpg"></td>
                            <td class="text-right">Fire HD10</td>
                            <td class="text-right">￥15,980</td>
                            <td class="text-right">
                                <select id="hd10" name="hd10" class="form-control">
                                    <option value="1" selected>1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                </select>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <div id="AmazonPayButton" style="text-align:center"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://static-fe.payments-amazon.com/checkout.js"></script>
<script type="text/javascript">
    let client = "browser";
    if(window.androidApp) {
        client = "androidApp";
    } else if(window.webkit && webkit.messageHandlers && webkit.messageHandlers.iosApp) {
        client = "iosApp";
    }
    document.cookie = "client=" + client + ";path=/"; // ここではテストのため、localhostへはhttpでアクセスするため、secure属性を付与しない。

    function saveSelectedValues() {
        document.getElementById('error').textContent = '';
        let hd8 = document.getElementById('hd8').value;
        let hd10 = document.getElementById('hd10').value;
        document.cookie = "hd8=" + hd8 + ";path=/"; // ここではテストのため、localhostへはhttpでアクセスするため、secure属性を付与しない。
        document.cookie = "hd10=" + hd10 + ";path=/"; // ここではテストのため、localhostへはhttpでアクセスするため、secure属性を付与しない。
    }
    saveSelectedValues();
    document.getElementById('hd8').addEventListener('change', saveSelectedValues);
    document.getElementById('hd10').addEventListener('change', saveSelectedValues);

    if(client === 'browser') {
        amazon.Pay.renderButton('#AmazonPayButton', {
            // set checkout environment
            merchantId: 'A23YM23UEBY8FM',
            ledgerCurrency: 'JPY',
            // customize the buyer experience
            checkoutLanguage: 'ja_JP',
            productType: 'PayAndShip',
            placement: 'Cart',
            sandbox: true,
            buttonColor: 'Gold',
            // configure Create Checkout Session request
            createCheckoutSessionConfig: {                     
                payloadJSON: '{"webCheckoutDetails":{"checkoutReviewReturnUrl":"https://localhost:3443/sample/checkoutReview"},"storeId":"amzn1.application-oa2-client.242a859efb5f47f09847f3f0aebd50ca","scopes":["name","email","phoneNumber","billingAddress"]}', // string generated in step 2
                signature: '', // signature generated in step 3
                publicKeyId: 'SANDBOX-AGH2Y6VC2VAUJ27GG6VDFOTD',
                algorithm: 'AMZN-PAY-RSASSA-PSS-V2'
            }
        });
        // amazon.Pay.renderButton('#AmazonPayButton', {
        //     merchantId: 'A1TSPPAG295GDW',
        //     ledgerCurrency: 'JPY', // Amazon Pay account ledger currency
        //     sandbox: true, // dev environment
        //     checkoutLanguage: 'ja_JP', // render language
        //     productType: 'PayAndShip', // checkout type
        //     placement: 'Cart', // button placement
        //     buttonColor: 'Gold',
        //     createCheckoutSessionConfig: {
        //         payloadJSON: '{"scopes":["name","email","phoneNumber","billingAddress"],"storeId":"amzn1.application-oa2-client.cc5d670bf1b941e297fc8b5be4de43a5","webCheckoutDetails":{"checkoutReviewReturnUrl":"https://localhost:3443/sample/checkoutReview"}}', // string generated in step 2
        //         signature: '', // signature generated in step 3
        //         publicKeyId: 'SANDBOX-AEM7CEF46GPWS47GRHHCSOV3',
        //         // algorithm: 'AMZN-PAY-RSASSA-PSS-V2'
        //     }
        // });
    } else {
        let node = document.createElement("input");
        node.type = "image";
        node.src = "/static/img/button_images/Gold/Sandbox-ja_jp-amazonpay-gold-large-button_T2.png";
        node.addEventListener('click', (e) => {
            coverScreen();
            if(client === 'androidApp') {
                androidApp.login();
            } else {
                webkit.messageHandlers.iosApp.postMessage({op: 'login'});            
            }
        });
        document.getElementById("AmazonPayButton").appendChild(node);
    }

    function loadUrl(url) {
        location.href = url;
    }
    
    function coverScreen() {
        document.getElementById('white_cover').style.display = 'block';
    }

    function uncoverScreen() {
        document.getElementById('white_cover').style.display = 'none';
    }
</script>

</body>
</html>